# AI Voice Interview Assistant - Environment Configuration
# Copy this file to .env and fill in your actual values

# Flask Configuration
FLASK_SECRET_KEY=your-secret-key-here-generate-a-strong-one
FLASK_ENV=production
FLASK_DEBUG=False

# File Upload Configuration
MAX_CONTENT_LENGTH=52428800  # 50MB in bytes
UPLOAD_FOLDER=uploads
AUDIO_FOLDER=audio_uploads

# Security Configuration
ALLOWED_RESUME_EXTENSIONS=pdf,docx
ALLOWED_AUDIO_EXTENSIONS=wav,mp3,webm,ogg

# API Keys (if needed)
HUGGINGFACE_API_KEY=your-huggingface-api-key-here
OPENAI_API_KEY=your-openai-api-key-here

# Database Configuration (if using database)
DATABASE_URL=sqlite:///interview_data.db

# CSRF Protection
WTF_CSRF_ENABLED=True
WTF_CSRF_SECRET_KEY=your-csrf-secret-key-here

# Session Configuration
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax